    <script>
        var LoginHelper = (function () {
            var loginHelper = function () { };

            var waitTimer = 0;
            var counter = 0;
            var loginInProgress = false;

            loginHelper.login = function () { login(); };
            loginHelper.cancelLogin = function () { cancelLogin(); };
            loginHelper.lostAccount = function () { lostAccount(); };
            loginHelper.requestNewPassword = function () { requestNewPassword(); };

            function login() {
                if (loginInProgress) {
                    return;
                }

                loginInProgress = true;
                $("#btnSubmit").attr("disabled", "");
                AjaxHelper.DoPostElement("/Adminisztracio/Login/LoginCheck", "LoginForm", loginCallback);
            }

            function loginCallback(answer) {
                if (answer.Success) {
                    if (answer.WarningMessage != undefined && answer.WarningMessage !== "") {
                        alert(answer.WarningMessage);
                    }
                    $("#UserName").val("");
                    $("#Password").val("");
                    loginRedirect();
                }
                else {
                    if (answer.ErrorCode === "AccountError") {
                        loginInProgress = false;
                        $("#btnSubmit").removeAttr("disabled");
                        $('.Forgot_Password').attr("hidden", false);
                        $("#lblError").text(answer.ErrorMessage);
                        cancelLogin();
                    }
                    else if (answer.ErrorCode === "ServerFull") {
                        loginInProgress = false;
                        $("#btnSubmit").removeAttr("disabled");
                        counter = counter + 1;
                        $("#loginErrorText").val(answer.ErrorMessage);
                        if ($("#LoginWaitWindow").length > 0) {
                            setWaitWindow();
                        } else {
                            AjaxHelper.DoPost("/Adminisztracio/Login/ServerFullPopUp", undefined, function (data) { popUpWaitWindow(data); setWaitWindow(); });
                        }
                    }
                }
            }

            function lostAccount() {
                AjaxHelper.DoPost("/Adminisztracio/Login/LostPasswordPopUp", undefined, popUpLostPasswordWindow);
            }

            function requestNewPassword() {
                AjaxHelper.DoPostElement("/Adminisztracio/Login/PasswordReset", "LostPasswordForm", requestNewPasswordCallback);
            }

            function requestNewPasswordCallback(data) {
                KretaWindowHelper.destroyAllWindow();
                KretaWindowHelper.feedbackWindow("Elfelejtett jelsz&#243;", data);
            }

            function setWaitWindow() {
                $("#serverFullCounter").val(counter);
                starttimer();
            }

            function stoptimer() {
                if (waitTimer != null) {
                    clearInterval(waitTimer);
                }
            }

            function starttimer() {
                waitTimer = setInterval("login()", 10000);
            }

            function cancelLogin() {
                AjaxHelper.DoPost("/Adminisztracio/Login/LogOut");
                stoptimer();
                counter = 0;
                $("#Password").val("");
                $("#UserName").val("");
                KretaWindowHelper.destroyAllWindow();
                $("#UserName").focus();
            }

            function popUpLostPasswordWindow(data) {
                var config = KretaWindowHelper.getWindowConfigContainer();
                config.title = "Elfelejtett jelsz&#243;";
                config.content = data;
                config.maxWidth = "850px";
                config.height = "150px";

                var modal = KretaWindowHelper.createWindow("LostPasswordWindow", config);
                KretaWindowHelper.openWindow(modal, true);
            }

            function popUpWaitWindow(data) {
                var config = KretaWindowHelper.getWindowConfigContainer();
                config.title = "Bejelentkez&#233;s";
                config.content = data;
                config.height = "330px";

                var modal = KretaWindowHelper.createWindow("LoginWaitWindow", config);
                KretaWindowHelper.openWindow(modal, true);
            }

            function loginRedirect() {
                if (!CommonUtils.checkBrowserVersion()) {
                    KretaWindowHelper.feedbackWindow("Figyelem", "A haszn&#225;lt b&#246;ng&#233;sző nem t&#225;mogatott.", true, redirectToRules);
                } else {
                    redirectToRules();
                }
            }

            function redirectToRules() {
                location.href = "/Adminisztracio/SzerepkorValaszto";
            }

            $(document).ready(function () {
                $("#UserName").focus();
            });

            $(document).keypress(function (event) {
                if (event.keyCode === 13) {
                    $("#btnSubmit").click();
                }
            });

            return loginHelper;
        })();
    </script>
    <script>
        var LanguageHelper = (function () {
            var languageHelper = function () { };

            languageHelper.mouseout = function (button, percent) { mouseout(button, percent); };
            languageHelper.mouseover = function (button) { mouseover(button); };

            function mouseout(button, percent) {
                button.css({
                    "opacity": "0." + percent,
                    "filter": "alpha(opacity=" + percent + ")",
                    "-moz-opacity": "0." + percent
                });
            }

            function mouseover(button) {
                button.css({
                    "opacity": "1",
                    "filter": "alpha(opacity=100)",
                    "-moz-opacity": "1"
                });
            }

            return languageHelper;
        })();
    </script>
